<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/darkBlue"
	android:gravity="center"
	android:orientation="vertical"
	android:paddingHorizontal="32dp"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:layout_width="300dp"
			android:layout_height="100dp"
			android:maxWidth="300px"
			android:maxHeight="120dp"
			android:src="@drawable/ic_android" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingVertical="8dp"
			android:text="Choose your language:"
			android:textColor="@color/colorPrimary"
			android:textSize="20sp" />

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="vertical">

				<Button
					android:id="@+id/ArabicBtn"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					android:backgroundTint="@color/colorPrimaryDark"
					android:enabled="true"
					android:onClick="ToufikBtnClick"
					android:text="العربية" />

				<Button
					android:id="@+id/EnglishBtn"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					android:backgroundTint="@color/colorPrimary"
					android:enabled="true"
					android:onClick="EnglishBtnClick"
					android:text="English" />

				<Button
					android:id="@+id/FrenchBtn"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					android:backgroundTint="@color/colorPrimaryDark"
					android:enabled="false"
					android:text="Francais" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>

</LinearLayout>
